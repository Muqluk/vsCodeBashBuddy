<Window x:Class="vsCodeBashBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:vsCodeBashBuddy"
        mc:Ignorable="d"
        Title="vsCode Bash Buddy"
        SizeToContent="WidthAndHeight"
        MaxHeight="800"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
  <i:Interaction.Triggers>
    <i:EventTrigger EventName="Closing">
      <i:InvokeCommandAction Command="{Binding HandleWindowClosingCmd}" CommandParameter="{Binding}"/>
    </i:EventTrigger>
  </i:Interaction.Triggers>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    <ListBox 
      Grid.Row="0"
      Height="auto"
      MinHeight="200"
      MinWidth="400"
      Width="auto"
      VerticalAlignment="Stretch"
      HorizontalAlignment="Stretch"
      ScrollViewer.CanContentScroll="true"
      ItemsSource="{Binding WatchedAppList}"/>
    <WrapPanel Grid.Row="1">
      <Button 
        FontSize="20"
        Grid.Row="1"
        IsEnabled="{Binding ReloadAppsEnabled}" 
        Command="{Binding ReloadWatchedAppsCmd}"
        Width="auto"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">Reload</Button>
      <CheckBox 
        IsChecked="{Binding AutoRefreshApps}"
        VerticalAlignment="Center"
        Margin="10 0 0 0"
      />
      <Label>Auto Update</Label>
      <CheckBox 
        IsChecked="{Binding IncludeBrowser}"
        VerticalAlignment="Center"
        Margin="10 0 0 0"
      />
      <Label>Include Browser</Label>
    </WrapPanel>
    <Button 
      FontSize="20"
      Grid.Row="1"
      IsEnabled="{Binding KillButtonEnabled}" 
      Command="{Binding KillSelectedAppsCmd}"
      Width="auto"
      HorizontalAlignment="Right"
      VerticalAlignment="Bottom">Kill All</Button>
  </Grid>
</Window>
