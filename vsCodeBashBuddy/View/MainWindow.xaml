<Window
  x:Class="vsCodeBashBuddy.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
  xmlns:local="clr-namespace:vsCodeBashBuddy"
  xmlns:views="clr-namespace:vsCodeBashBuddy.View"
  mc:Ignorable="d"
  Title="vsCode Bash Buddy"
  MaxHeight="800"
  Width="500"
  Height="300">
  <i:Interaction.Triggers>
    <i:EventTrigger
      EventName="Closing">
      <i:InvokeCommandAction
        Command="{Binding HandleWindowClosingCmd}"
        CommandParameter="{Binding}" />
    </i:EventTrigger>
  </i:Interaction.Triggers>
  <Grid
    Name="DisplayGrid">
    <Grid.RowDefinitions>
      <RowDefinition
        Height="auto" />
    </Grid.RowDefinitions>
    <views:ProcessWatcher Grid.Row="0" />
  </Grid>
</Window>
